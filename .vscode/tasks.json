{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run",
			"dependsOn": "Compile",
			"type": "shell",
			"command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
			"presentation": {
				"echo": false,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": false,
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Compile",
			"dependsOn": "Remove",
			"type": "shell",
			"command": "${config:qb64.compilerPath}",
			"args": [
				"-x",
				"${fileDirname}\\${fileBasename}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false
			}
		},
		{
			"label": "Remove",
			"type": "shell",
			"command": "del",
			"args": [
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"presentation": {
				"reveal": "always",
				"panel": "shared",
				"focus": false
			}
		}
	]
}