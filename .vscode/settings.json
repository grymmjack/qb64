    "editor.cursorBlinking": "blink",
    "editor.guides.highlightActiveIndentation": true,
    "editor.rulers": [
        80
    ],
    "editor.tokenColorCustomizations": {
        "functions": "#55ff55",
        "variables": "#ffffff",
        "numbers": "#ff85a7",
        "strings": "#ffff55",
        "comments": "#55ffff",
        "keywords": "#93c4eb"
    },
    "editor.bracketPairColorization.enabled": true	
