{
	"files.exclude": {
		"**/*.bas-bak": true,
		"**/*.bi-bak": true,
		"**/*.bm-bak": true,
		"**/*.cmp-out": true,
	},
    "qb64.compilerPath": "c:\\QB64\\qb64.exe",
    "extensions.ignoreRecommendations": true,
    "editor.fontFamily": "\"Perfect DOS VGA 437 Win\", Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontFamily": "\"Perfect DOS VGA 437 Win\", Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.fontWeightBold": "normal",
    "editor.fontSize": 16,
    "editor.lineHeight": 1.1,
    "editor.fontWeight": "normal",
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.confirmSync": false,
    "workbench.iconTheme": "file-icons",
    //"workbench.colorTheme": "MS-DOS Editor Theme",
    "editor.suggest.preview": true,
    "workbench.colorCustomizations": {
        "editor.background": "#0000aa",
        "editor.foreground": "#93c4eb",
        "terminal.background": "#000000",
        "editorLineNumber.foreground": "#ffffff60",
        "editorLineNumber.activeForeground": "#ffffffff",
        "activityBar.background": "#555555",
        "activityBar.foreground": "#ffffff",
        "activityBar.border": "#ffffff",
        "activityBar.activeBorder": "#55ffff",
        "activityBar.activeFocusBorder": "#ffffff",
        "activityBar.activeBackground": "#00a3a3",
        "activityBarBadge.background": "#00a3a3",
        "activityBarBadge.foreground": "#ffff55",
        "activityBar.inactiveForeground": "#ffffff",
        "editor.lineHighlightBackground": "#00000060",
        "editor.lineHighlightBorder": "#ffffff60",
        "statusBar.background": "#00a3a3",
        "icon.foreground": "#ffffff",
        "sideBar.border": "#ffffff",
        "editorIndentGuide.background": "#ffffff20",
        "editorIndentGuide.activeBackground": "#ffffff60",
        "editorRuler.foreground": "#ffffff10",
        "editorGutter.foldingControlForeground": "#fff28c",
        "tab.inactiveBackground": "#555555",
        "tab.inactiveForeground": "#ffffff",
        "editor.selectionHighlightBackground": "#ffffff28",
        "editor.selectionHighlightBorder": "#ffffff28",
        "editorCursor.background": "#ffffff",
        "editorCursor.foreground": "#ffffff",
        "editor.selectionBackground": "#000000",
        "editor.selectionForeground": "#ffff55",
