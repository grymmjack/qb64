TYPE BLOCK_OBJECT
    X       AS INTEGER
    Y       AS INTEGER
    W       AS INTEGER
    H       AS INTEGER
    INDEX   AS INTEGER
    KOLOR   AS INTEGER
    LIVES   AS INTEGER
    DISPLAY AS STRING * 1
END TYPE

DIM SHARED BLOCK AS BLOCK_OBJECT
DIM SHARED BLOCKS(1 TO CFG.NUM_BLOCKS%) AS BLOCK_OBJECT