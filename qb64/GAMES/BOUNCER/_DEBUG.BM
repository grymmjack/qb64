SUB debug_init
    DEBUGGER.ENABLED%   = 0
    DEBUGGER.CUR_STEP%  = 0
    DEBUGGER.PREV_STEP% = 0
END SUB

SUB debug_start
    DEBUGGER.ENABLED% = 1
END SUB

SUB debug_next
    DEBUGGER.PREV_STEP% = DEBUGGER.CUR_STEP%
    DEBUGGER.CUR_STEP%  = DEBUGGER.CUR_STEP% + 1
END SUB

SUB debug_stop
    DEBUGGER.ENABLED% = 0
END SUB